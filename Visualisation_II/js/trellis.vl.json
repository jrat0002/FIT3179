{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Passenger trips per month",
  "data": {
    "url": "https://raw.githubusercontent.com/jrat0002/FIT3179/main/Visualisation_II/data/dom_citypairs_web.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Month_num": "number",
        "Year": "number",
        "Passenger_Trips": "number",
        "Passenger_Load_Factor": "number",
        "Aircraft_Trips": "number"
      }
    }
  },
  "params": [
    {
      "name": "route_selection",
      "bind": {
        "input": "select",
        "options": [null, "Melbourne - Sydney", "Hobart - Sydney"],
        "labels": [],
        "name": "Select a route: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "City1",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jrat0002/FIT3179/main/Visualisation_II/data/au_city_locations.csv"
        },
        "key": "city_upper",
        "fields": ["city"]
      },
      "as": ["City1"]
    },
    {
      "lookup": "City2",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jrat0002/FIT3179/main/Visualisation_II/data/au_city_locations.csv"
        },
        "key": "city_upper",
        "fields": ["city"]
      },
      "as": ["City2"]
    },
    {"calculate": "datum.City1 + ' - ' + datum.City2", "as": "Route"},
    {
      "calculate": "datum.Passenger_Load_Factor/100",
      "as": "passenger_load_factor_scaled"
    },
    {"calculate": "datetime(datum.Year, datum.Month_num)", "as": "Date"},
    {"filter": "datum.Year > 2005"},
    {"filter": "route_selection == null || datum.Route == route_selection"}
  ],
  "facet": {
    "row": {
      "field": "Date",
      "timeUnit": "year",
      "type": "ordinal",
      "header": {"labelAngle": 0}
    }
  },
  "spacing": {"row": 3},
  "spec": {
    "width": 800,
    "height": 25,
    "view": {"stroke": null},
    "mark": {
      "type": "area",
      "interpolate": "monotone",
      "color": {
        "gradient": "linear",
        "x1": 1,
        "y1": 1,
        "x2": 1,
        "y2": 0,
        "stops": [
          {"offset": 0, "color": "lightblue"},
          {"offset": 0.5, "color": "lightblue"},
          {"offset": 1, "color": "darkblue"}
        ]
      }
    },
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "timeUnit": "month",
        "axis": {"grid": false, "domain": false}
      },
      "y": {
        "field": "Passenger_Trips",
        "aggregate": "mean",
        "type": "quantitative",
        "scale": {"zero": false},
        "axis": {
          "title": null,
          "labels": false,
          "ticks": false,
          "grid": false,
          "domain": false
        }
      }
    }
  },
  "config": {}
}